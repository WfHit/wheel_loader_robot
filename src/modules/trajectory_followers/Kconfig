menuconfig MODULES_TRAJECTORY_FOLLOWERS
	bool "trajectory_followers"
	default n
	---help---
		Enable support for trajectory following modules

if MODULES_TRAJECTORY_FOLLOWERS

config TRAJECTORY_FOLLOWERS_CHASSIS_TRAJECTORY_FOLLOWER
	bool "chassis_trajectory_follower"
	default y
	depends on MODULES_TRAJECTORY_FOLLOWERS
	---help---
		Enable the chassis trajectory follower module.
		This module implements Model Predictive Control (MPC) for chassis motion,
		providing trajectory following capabilities for the wheel loader chassis.

config TRAJECTORY_FOLLOWERS_END_EFFECTOR_TRAJECTORY_FOLLOWER
	bool "end_effector_trajectory_follower"
	default y
	depends on MODULES_TRAJECTORY_FOLLOWERS
	---help---
		Enable the end effector trajectory follower module.
		This module implements 6-DOF PID control for end effector motion,
		providing trajectory following capabilities for the wheel loader end effector assembly.

endif # MODULES_TRAJECTORY_FOLLOWERS
